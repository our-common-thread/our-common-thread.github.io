---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import LinkButton from '@components/LinkButton.astro';
import Hr from '@components/Hr.astro';
import Card from '@components/Card.astro';
import Socials from '@components/Socials.astro';
import { getSortedPosts } from '@utils/getSortedPosts';
import { SOCIALS } from '@config';
import Patterns from '@components/Patterns.astro';

const posts = await getCollection('posts');
let portfolio = await getCollection('portfolio');

const sortedPosts = getSortedPosts(posts);
let sortedPortfolio = getSortedPosts(portfolio);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);

const socialCount = SOCIALS.filter(social => social.active).length;
---

<Layout class='max-w-full'>
  <Header />
  <main id='main-content'>
    {
      featuredPosts.length > 0 && (
        <>
          <section id='featured'>
            <h2>Featured</h2>
            <ul>
              {featuredPosts.map(({ data, slug }) => (
                <Card
                  href={`/posts/${slug}/`}
                  frontmatter={data}
                  secHeading={false}
                />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      sortedPortfolio.length > 0 && (
        <section id='portfolio-posts'>
          <h2>Portfolio Pieces</h2>
          <ul class='portfolio'>
            {sortedPortfolio.map(
              ({ data, slug }, index) =>
                index < 4 && (
                  <Card
                    href={`/portfolio/${slug}/`}
                    frontmatter={data}
                    secHeading={false}
                    details={false}
                  />
                )
            )}
          </ul>
          <div class='all-posts-btn-wrapper'>
            <LinkButton href='/portfolio/'>
              All Portfolio Pieces
              <svg xmlns='http://www.w3.org/2000/svg'>
                <path d='m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z' />
              </svg>
            </LinkButton>
          </div>
        </section>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id='recent-posts'>
          <h2>Recent Posts</h2>
          <ul>
            {recentPosts.map(
              ({ data, slug }, index) =>
                index < 4 && (
                  <Card
                    href={`/posts/${slug}/`}
                    frontmatter={data}
                    secHeading={false}
                  />
                )
            )}
          </ul>
        </section>
      )
    }

    <div class='all-posts-btn-wrapper'>
      <LinkButton href='/posts/'>
        All Posts
        <svg xmlns='http://www.w3.org/2000/svg'
          ><path
            d='m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z'
          ></path>
        </svg>
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  /* ===== Featured & Recent Posts Sections ===== */
  #featured,
  #recent-posts,
  #portfolio-posts {
    @apply pb-6 pt-12;
  }
  #featured h2,
  #recent-posts h2,
  #portfolio-posts h2 {
    @apply text-2xl font-semibold tracking-wide;
  }
  .all-posts-btn-wrapper {
    @apply my-8 text-center;
  }
</style>
